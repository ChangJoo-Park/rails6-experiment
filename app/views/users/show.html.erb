<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div>
  <%= adorable_avatar(@user.email, 200) %>
  <%= @user.email %>
</div>
<div>
  <h2>Published Posts</h2>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.title, post_path(post) %>
        <%= post.published %>
      </li>
    <% end %>
  </ul>
</div>
