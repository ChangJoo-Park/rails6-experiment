<div class="row justify-content-center">
  <div class="col-3 container border m-3 p-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <h1 class="text-center text-monospace">NotNull 로그인</h1>
      </div>

      <div class="form-group">
        <%= f.label :email, '이메일' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
      </div>

      <div class="form-group">
        <%= f.label :password, '비밀번호' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "********" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me, class: "checkbox mb-3" %>
          <%= f.label :remember_me, '체크하여 로그인 유지' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "로그인", class: "btn btn-lg btn-primary btn-block" %>
      </div>

      <p class="mt-5 mb-3 text-muted">© 2019-<%= DateTime.now.year %> NotNull </p>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
