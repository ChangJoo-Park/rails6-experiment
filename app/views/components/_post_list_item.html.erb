<div class="post-preview">
  <% if post.cover.attached? %>
    <%= image_tag post.cover.variant(resize: "600"), class: "img-fluid" %>
  <% end %>
  <div class="post-title">
    <%= link_to post.title, post %>
  </div>
  <div class="post-author">
    <% if has_user %>
      <%= adorable_avatar(post.user.email, 36) %> <%= link_to post.user.email, user_path(post.user) %>
    <% end %>
  </div>
  <div class="post-meta">
    <div>
      <%= render "components/tag_list", tags: post.tag_list %>
    </div>
    <div>
      <%= post.published_at %>
    </div>
  </div>
</div>
