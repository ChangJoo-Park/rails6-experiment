<div class="post-preview">
  <div class="post-title">
    <%= link_to post.title, post %>
  </div>
  <div class="post-author">
    <% if has_user %>
      <%= adorable_avatar(post.user.email, 36) %> <%= link_to post.user.email, user_path(post.user) %>
    <% end %>
  </div>
  <div class="post-meta">
    <div>
      <% post.tag_list.split(',').each do |tag| %>
        <%= link_to "##{tag.strip}", tag_path(tag.strip), class: "post-meta-tag" %> &nbsp;
      <% end %>
    </div>
    <div>
      <%= post.published_at %>
    </div>
  </div>
</div>
